@page "/learnBlazer/bindprop"

<h3>Termékek - Data Binding</h3>

Név: @Product.Name <br />
Készleten: @Product.IsActive <br />
Mennyiség: @Product.Price <br />
Input mennyiség: <input type="number" @bind-value="@Product.Price" />

@code {
    Models.Product Product = new()
        {
            Id = 1,
            Name = "Tejbepapi",
            IsActive = true,
            Price = 5
        };

}
